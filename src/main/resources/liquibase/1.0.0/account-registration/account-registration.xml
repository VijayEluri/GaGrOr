<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="account-table" author="spacejens">
		<createTable tableName="account">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="version" type="bigint" defaultValueNumeric="0">
				<constraints nullable="false" />
			</column>
			<column name="username" type="varchar(64)">
				<constraints nullable="false" />
			</column>
			<column name="password" type="char(60)"> <!-- BCrypt output -->
				<constraints nullable="false" />
			</column>
			<column name="account_type" type="tinyint">
				<constraints nullable="false" />
			</column>
			<column name="active" type="boolean">
				<constraints nullable="false" />
			</column>
			<column name="locked" type="boolean">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="username-unique" author="spacejens">
		<addUniqueConstraint constraintName="account_username_u" tableName="account" columnNames="username"/>
	</changeSet>

	<changeSet id="username-index" author="spacejens">
		<createIndex indexName="account_username_ix" tableName="account">
			<column name="username" type="varchar(64)" />
		</createIndex>
	</changeSet>

	<changeSet id="account-admin" author="spacejens">
		<insert tableName="account">
			<column name="username" value="admin"/>
			<column name="password" value="$2a$10$LtpG/uRFVYW33i8kp5XW1ehLzJv.fFmuOy8jST65Hz6o4CD6N5cju"/> <!-- password -->
			<column name="account_type" valueNumeric="1"/> <!-- System owner -->
			<column name="active" valueBoolean="true"/>
			<column name="locked" valueBoolean="false"/>
		</insert>
	</changeSet>
</databaseChangeLog>
