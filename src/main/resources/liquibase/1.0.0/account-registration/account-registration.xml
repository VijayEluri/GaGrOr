<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

	<changeSet id="account-table" author="spacejens">
		<createTable tableName="account">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="version" type="bigint" defaultValueNumeric="0">
				<constraints nullable="false" />
			</column>
			<column name="username" type="varchar(64)">
				<constraints nullable="false" />
			</column>
			<column name="password" type="char(44)"> <!-- Base64 SHA-256 output -->
				<constraints nullable="false" />
			</column>
			<column name="salt" type="char(16)"> <!-- Base64 12 random bytes -->
				<constraints nullable="false" />
			</column>
			<column name="account_type" type="tinyint">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="username-unique" author="spacejens">
		<addUniqueConstraint tableName="account" columnNames="username"/>
	</changeSet>

	<changeSet id="account-admin" author="spacejens">
		<insert tableName="account">
			<column name="username" value="admin"/>
			<column name="password" value="cbT97FvathBBkU4kLQGaMhiFD+ijGbBJ3eB2/hVaKm8="/> <!-- password -->
			<column name="salt" value="KyPVwKOMpZkRp1ZM"/>
			<column name="account_type" valueNumeric="1"/> <!-- System owner -->
		</insert>
	</changeSet>
</databaseChangeLog>
